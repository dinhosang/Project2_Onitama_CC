<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codeclan.example.myapplication.MainActivity">

    <ImageView
        android:id="@+id/blue_board_side"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/blue_board_border"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/boardGridView" />

    <ImageView
        android:id="@+id/red_board_side"
        android:layout_width="370dp"
        android:layout_height="85dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/red_board_border"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/boardGridView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/redCardOne"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginBottom="440dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:onClick="toggleCardSelectionOnClick"
        android:src="@drawable/ic_launcher_background"
        android:tag="@string/red_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/blueCardTwo"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/redCardTwo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/redCardTwo"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginBottom="440dp"
        android:layout_marginTop="16dp"
        android:onClick="toggleCardSelectionOnClick"
        android:src="@drawable/ic_launcher_background"
        android:tag="@string/red_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/blueCardOne"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <GridView
        android:id="@+id/boardGridView"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:numColumns="5"
        app:layout_constraintBottom_toTopOf="@+id/blue_board_side"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/red_board_side" />

    <ImageView
        android:id="@+id/blueCardOne"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="28dp"
        android:onClick="toggleCardSelectionOnClick"
        android:src="@drawable/ic_launcher_background"
        android:tag="@string/blue_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/blueCardTwo"
        app:layout_constraintHorizontal_bias="0.11"
     />

    <ImageView
        android:id="@+id/blueCardTwo"
        android:layout_width="134dp"
        android:layout_height="52dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="28dp"
        android:onClick="toggleCardSelectionOnClick"
        android:src="@drawable/ic_launcher_background"
        android:tag="@string/blue_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/blue_board_side" />

</android.support.constraint.ConstraintLayout>
